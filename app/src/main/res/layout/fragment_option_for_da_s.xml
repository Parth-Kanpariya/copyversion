<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="75dp"
    tools:context=".OptionForDaS">

    <FrameLayout
        android:id="@+id/visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OptionForDaS">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:outlineSpotShadowColor="@color/primaryColor"
                app:cardCornerRadius="50dp"
                app:cardElevation="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_corner"
                    android:scaleType="fitXY"
                    android:src="@drawable/logoutil" />


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:outlineSpotShadowColor="@color/primaryColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fontresourcefile"
                    android:text="Want To Share Food?"
                    android:textSize="30dp" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:outlineSpotShadowColor="@color/primaryColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fontresourcefile"
                    android:text="choose anyone"
                    android:textSize="15dp" />


            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:id="@+id/OptionDandS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="30dp"
                        android:outlineSpotShadowColor="@color/white"
                        app:cardCornerRadius="75dp"
                        app:cardElevation="16dp">

                        <ImageView
                            android:id="@+id/DonatButton"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/circle_corner"
                            android:scaleType="fitXY"
                            android:src="@drawable/food_button1" />


                    </com.google.android.material.card.MaterialCardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/fontresourcefile"
                        android:text="Donate"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="75dp"
                        android:outlineSpotShadowColor="@color/white"
                        app:cardElevation="16dp">

                        <ImageView
                            android:id="@+id/SellButtom"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/circle_corner"
                            android:scaleType="fitXY"
                            android:src="@drawable/sell_food_button" />


                    </com.google.android.material.card.MaterialCardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/fontresourcefile"
                        android:text="Sell"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="75dp"
                    android:outlineSpotShadowColor="@color/white"
                    app:cardElevation="16dp">

                    <ImageView
                        android:id="@+id/RaiseFoodButton"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/circle_corner"
                        android:scaleType="fitXY"
                        android:src="@drawable/raisefood" />


                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/fontresourcefile"
                    android:text="RaiseFood"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</ScrollView>
