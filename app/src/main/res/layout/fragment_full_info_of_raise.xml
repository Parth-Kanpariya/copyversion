<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9c8fce"
    android:layout_marginBottom="60dp"
    tools:context="com.rotlo.copyversion.FullInfoOfPost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:fontFamily="@font/josefinsanssemibold"
            android:textSize="45dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            app:cardElevation="5dp"
            app:cardCornerRadius="122dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="12dp"
                app:cardElevation="2dp"
                android:layout_weight="2"
                android:outlineSpotShadowColor="@color/black"
                android:outlineAmbientShadowColor="@color/black"
                app:cardCornerRadius="110dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:contentDescription="post info"
                    android:scaleType="centerCrop" />
            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>






        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="65dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="25dp"
                android:paddingLeft="10dp"
                android:background="@drawable/gradient"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textSize="25dp"
                        android:background="@drawable/ic_baseline_perm_identity_24"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/textView2"
                        android:fontFamily="@font/josefinsanssemibold"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textSize="25dp"
                        android:background="@drawable/ic_baseline_people_24"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/textView9"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/josefinsanssemibold"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="28dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textSize="25dp"
                        android:background="@drawable/ic_baseline_my_location_24"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/textView4"
                        android:fontFamily="@font/josefinsanssemibold"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>
                <Button
                    android:id="@+id/Chat_Initiate"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/round_corner"
                    android:text="CHAT"
                    android:focusable="true"
                    android:fontFamily="@font/josefinsanssemibold"
                    android:textAllCaps="false"
                    android:textSize="20dp"

                    />





            </LinearLayout>






        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


</ScrollView>