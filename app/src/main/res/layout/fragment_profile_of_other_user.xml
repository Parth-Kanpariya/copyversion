<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileOfOtherUser">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/view2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:outlineSpotShadowColor="@color/primaryColor"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="65dp"
        app:cardElevation="16dp">

        <ImageView
            android:id="@+id/imageViewInProfileOfOther"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/profileicon"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/UserNameInProfileOfOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:fontFamily="@font/fontresourcefile"
        android:text="Name"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:textColor="@color/primaryColor"
        android:layout_marginTop="22dp"
        android:textSize="20dp" />


    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="11dp"
        android:id="@+id/linearLayoutForOtherPostDonor"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="35dp"
            android:layout_gravity="center_vertical"
            android:layout_height="35dp"
            android:background="@drawable/ic_food_donation_svgrepo_com"
            android:fontFamily="@font/fontresourcefile"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/my_posts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/fontresourcefile"
            android:text="Donate posts"
            android:layout_marginTop="2dp"
            android:textColor="@color/primaryColor"
            android:layout_marginLeft="8dp"
            android:textSize="18dp" />


    </LinearLayout>
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="11dp"
        android:id="@+id/linearLayoutForOtherRaiser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="35dp"
            android:layout_gravity="center_vertical"
            android:layout_height="35dp"
            android:background="@drawable/ic_grid"
            android:fontFamily="@font/fontresourcefile"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/fontresourcefile"
            android:text="Raise Post"
            android:layout_marginTop="2dp"
            android:textColor="@color/primaryColor"
            android:layout_marginLeft="8dp"
            android:textSize="18dp" />


    </LinearLayout>
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="11dp"
        android:id="@+id/linearLayoutForOtherPostSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="35dp"
            android:layout_gravity="center_vertical"
            android:layout_height="35dp"
            android:background="@drawable/ic_restaurant_svgrepo_com"
            android:fontFamily="@font/fontresourcefile"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/fontresourcefile"
            android:text="Selling posts"
            android:layout_marginTop="2dp"
            android:textColor="@color/primaryColor"
            android:layout_marginLeft="8dp"
            android:textSize="18dp" />


    </LinearLayout>

    <Button
        android:id="@+id/Chat_Initiate_with_other_User"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_corner"
        android:text="CHAT"
        android:textAllCaps="false"
        android:textSize="20dp"

        />




</LinearLayout>